{
    "compilerOptions": {
        "outDir": "./dist",
        "experimentalDecorators": true,
        "declaration": true,
        "module": "commonjs",
        "target": "es5",
        "lib": [
            "es2016",
            "dom"
        ]
    },
    "exclude": [
        "node_modules"
    ],
    "files": [
        "./src/main.ts"
    ],
    "angularCompilerOptions": {
        "disableTypeScriptVersionCheck": true,
        "genDir": "./aot",
        "skipMetadataEmit": true,
        "generateCodeForLibraries": true
    }    
}